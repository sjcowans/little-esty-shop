<h3><%= @merchant.name %></h3><%= image_tag @merchant_img.url, size: "100x100" %>
<p><%= link_to 'Merchant Items', "/merchants/#{@merchant.id}/items" %></p>
<p><%= link_to 'Merchant Invoices', "/merchants/#{@merchant.id}/invoices" %></p>
<p><% @merchant.top_5_customers.each do |customer| %></p>
  <div id="<%=customer.id%>">
  <p><%= customer.first_name %> <%= customer.last_name %>, <%= customer.transaction_count %></p>
  </div>
<% end %>


<p>Items Ready to Ship</p>
<p><% @invoices.each do |invoice| %></p>
  <div id="<%=invoice.id%>">
  <% invoice.items.each do |item| %>
    <p><%= item.name %>, Created at: <%= invoice.custom_date %>, <%= link_to "#{invoice.id}", "/invoices/#{invoice.id}"%></p>
  <% end %>
  </div>
<% end %> 